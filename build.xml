<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="tei2html">
    <property name="tmpDir" value="./data/tmp"/>
    <property name="editions" value="./data/editions"/>
    <delete dir="${tmpDir}"/>
    <mkdir dir="${tmpDir}"/>
    <xslt in="./editions/indices/tagesliste.xml" out=".editions/data/schnitzler-tage.xml" style="./xslts/1_alle-events-zusammenkopieren.xsl">
        <factory name="net.sf.saxon.TransformerFactoryImpl"/>
        <classpath location="${basedir}/saxon/saxon9he.jar"/>
    </xslt>
    <move todir="${editions}">
        <fileset dir="${tmpDir}"/>
    </move>
    
</project>